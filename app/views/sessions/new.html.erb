<div class="container">
  <h1>Login</h1>
  <%= form_tag '/login' do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Login" %>
  <% end %>

  <div class="button-container">
    Don't have an account? <%= link_to "Sign Up", '/signup' %>
  </div>
</div>
